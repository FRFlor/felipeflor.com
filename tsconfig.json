{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "compilerOptions": {
      "moduleResolution": "Node16"
    }
  },
  "exclude": [
    "**/*.spec.ts"
  ]
}
